<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/textForm"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORM INPUT KONTAK" />

    <TextView
        android:id="@+id/textName"
        android:layout_below="@id/textForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Nama :" />

    <EditText
        android:id="@+id/nama"
        android:layout_below="@id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/textAlamat"
        android:layout_below="@id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Alamat :" />

    <EditText
        android:id="@+id/alamat"
        android:layout_below="@id/textAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textEmail"
        android:layout_below="@id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Email :" />

    <EditText
        android:id="@+id/email"
        android:layout_below="@id/textEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/textTTL"
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Tanggal Lahir :" />

    <EditText
        android:id="@+id/lahir"
        android:layout_below="@id/textTTL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"/>

    <TextView
        android:id="@+id/textTelp"
        android:layout_below="@id/lahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan No Telpon :" />

    <EditText
        android:id="@+id/telpon"
        android:layout_below="@id/textTelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"/>

    <LinearLayout
        android:id="@+id/btnSave"
        android:layout_below="@id/telpon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:onClick="save"
            android:text="SAVE"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="OnClick" />

    </LinearLayout>



</RelativeLayout>